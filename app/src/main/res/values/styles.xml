<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
    <style name="CustomToolbar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:background">@color/colorTiger</item>
    </style>
    <style name="CustomPopup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-5dp</item>
    </style>
    <style name="MyToggle" parent="@android:style/Widget.Material.Light.Button.Toggle">
        <item name="android:textColorPrimary">@color/colorTiger</item>
        <item name="colorAccent">#2aa626</item>
        <item name="android:colorControlNormal">#f24b18</item>
        <item name="android:colorControlHighlight">#d2080e</item>
        <item name="android:colorButtonNormal">#e4fce4</item>
    </style>

<style name="MyButtons" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textColorPrimary">@color/colorTiger</item>
    <item name="android:colorButtonNormal">#fcf8f3</item>
    <item name="android:colorAccent">#2aa626</item>
    <item name="android:colorControlHighlight">#fff70a</item>
</style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#dfffffff</item>
    </style>
</resources>
